<div>
  <div>
    <h1>
      List of all expenses
    </h1>
  </div>
</div>

<hr>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Trip
        </th>

        <th>
          Expense
        </th>

        <th>
          Expense type
        </th>

        <th>
          Payment type
        </th>

        <th>
          Invoice
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_expenses.each do |an_expense| %>
      <tr>
        <td>
          <%= an_expense.id %>
        </td>

        <td>
          <%= an_expense.trip_id %>
        </td>

        <td>
          <%= an_expense.expense %>
        </td>

        <td>
          <%= an_expense.expense_type %>
        </td>

        <td>
          <%= an_expense.payment_type %>
        </td>

        <td>
          <%= an_expense.invoice %>
        </td>

        <td>
          <%= an_expense.description %>
        </td>

        <td>
          <%= time_ago_in_words(an_expense.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_expense.updated_at) %> ago
        </td>

        <td>
          <a href="/expenses/<%= an_expense.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
