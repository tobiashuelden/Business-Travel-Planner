<div>
  <div>
    <h1>
      List of all expenses
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new expense
    </h2>

    <form action="/insert_expense" method="post">
      <div>
        <label for="trip_id_box">
          Trip
        </label>

        <input type="text" id="trip_id_box" name="query_trip_id">
      </div>

      <div>
        <label for="expense_box">
          Expense
        </label>

        <input type="text" id="expense_box" name="query_expense">
      </div>

      <div>
        <label for="expense_type_box">
          Expense type
        </label>

        <input type="text" id="expense_type_box" name="query_expense_type">
      </div>

      <div>
        <label for="payment_type_box">
          Payment type
        </label>

        <input type="text" id="payment_type_box" name="query_payment_type">
      </div>

      <div>
        <label for="invoice_box">
          Invoice
        </label>

        <input type="text" id="invoice_box" name="query_invoice">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <button>
        Create expense
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Trip
        </th>

        <th>
          Expense
        </th>

        <th>
          Expense type
        </th>

        <th>
          Payment type
        </th>

        <th>
          Invoice
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_expenses.each do |an_expense| %>
      <tr>
        <td>
          <%= an_expense.id %>
        </td>

        <td>
          <%= an_expense.trip_id %>
        </td>

        <td>
          <%= an_expense.expense %>
        </td>

        <td>
          <%= an_expense.expense_type %>
        </td>

        <td>
          <%= an_expense.payment_type %>
        </td>

        <td>
          <%= an_expense.invoice %>
        </td>

        <td>
          <%= an_expense.description %>
        </td>

        <td>
          <%= time_ago_in_words(an_expense.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_expense.updated_at) %> ago
        </td>

        <td>
          <a href="/expenses/<%= an_expense.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
