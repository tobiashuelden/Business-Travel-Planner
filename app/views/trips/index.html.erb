<div>
  <div>
    <h1>
      List of all trips
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new trip
    </h2>

    <form action="/insert_trip" method="post">
      <div>
        <label for="start_a_box">
          Start a
        </label>

        <input type="text" id="start_a_box" name="query_start_a">
      </div>

      <div>
        <label for="end_b_box">
          End b
        </label>

        <input type="text" id="end_b_box" name="query_end_b">
      </div>

      <div>
        <label for="start_date_box">
          Start date
        </label>

        <input type="datetime-local" id="start_date_box" name="query_start_date">
      </div>

      <div>
        <label for="end_date_box">
          End date
        </label>

        <input type="datetime-local" id="end_date_box" name="query_end_date">
      </div>

      <div>
        <label for="trip_type_box">
          Trip type
        </label>

        <input type="text" id="trip_type_box" name="query_trip_type">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="business_travel_id_box">
          Business travel
        </label>

        <input type="text" id="business_travel_id_box" name="query_business_travel_id">
      </div>

      <button>
        Create trip
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Start a
        </th>

        <th>
          End b
        </th>

        <th>
          Start date
        </th>

        <th>
          End date
        </th>

        <th>
          Trip type
        </th>

        <th>
          Description
        </th>

        <th>
          Business travel
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trips.each do |a_trip| %>
      <tr>
        <td>
          <%= a_trip.id %>
        </td>

        <td>
          <%= a_trip.start_a %>
        </td>

        <td>
          <%= a_trip.end_b %>
        </td>

        <td>
          <%= a_trip.start_date %>
        </td>

        <td>
          <%= a_trip.end_date %>
        </td>

        <td>
          <%= a_trip.trip_type %>
        </td>

        <td>
          <%= a_trip.description %>
        </td>

        <td>
          <%= a_trip.business_travel_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_trip.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_trip.updated_at) %> ago
        </td>

        <td>
          <a href="/trips/<%= a_trip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
