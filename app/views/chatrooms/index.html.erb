<div>
  <div>
    <h1>
      List of all chatrooms
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new chatroom
    </h2>

    <form action="/insert_chatroom" method="post">
      <div>
        <label for="company_id_box">
          Company
        </label>

        <input type="text" id="company_id_box" name="query_company_id">
      </div>

      <button>
        Create chatroom
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Company
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_chatrooms.each do |a_chatroom| %>
      <tr>
        <td>
          <%= a_chatroom.id %>
        </td>

        <td>
          <%= a_chatroom.company_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_chatroom.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_chatroom.updated_at) %> ago
        </td>

        <td>
          <a href="/chatrooms/<%= a_chatroom.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
