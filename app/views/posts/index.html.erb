<div>

<%if session[:chatroom]=='public'%>
  <div>
    <h1>
      Public Chatroom
    </h1>
  </div>

<%else%>
  <div>
    <h1>
      <%=Company.where({:id=>session[:company_id]}).at(0).name%> Chatroom
    </h1>
  </div>

</div>
<%end%>
<hr>

<div>
  <div>
    <h2>
      Add a new post
    </h2>

    <form action="/insert_post" method="post">

      <div>
        <label for="content_box">
          Content
        </label>

        <input type="text" id="content_box" name="query_content">
      </div>

      <button>
        Create post
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          User
        </th>

        <th>
          Content
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>

        <th>
        </th>
        <th>
        </th>

      </tr>

      <% @list_of_posts.each do |a_post| %>
      <tr>

        <td>
          <%= a_post.user.name %>
        </td>

        <td>
          <%= a_post.content %>
        </td>

        <td>
          <%= time_ago_in_words(a_post.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_post.updated_at) %> ago
        </td>

        <td>
          <a href="/comments/post/<%= a_post.id %>">
            Show details
          </a>

        <%if a_post.user_id==session[:user_id]%>  
        </td>
                <td>
          <a href="/posts/<%= a_post.id %>">
            Update Post
          </a>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
